{
  "id": "blog",
  "label": "Blog",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "Uid",
          "placeholder": "URL"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": "Title"
        }
      },
      "summary": {
        "type": "Text",
        "config": {
          "label": "Summary",
          "placeholder": "Blog Summary"
        }
      },
      "previewImg": {
        "type": "Image",
        "config": {
          "label": "Blog Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "content": {
        "type": "StructuredText",
        "config": {
          "label": "Content",
          "placeholder": "Blog Content Rich Text",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "publishDate": {
        "type": "Date",
        "config": {
          "label": "Publish Date",
          "placeholder": "Publish Date"
        }
      },
      "publisherAvatar": {
        "type": "Image",
        "config": {
          "label": "Publisher Avatar",
          "constraint": {},
          "thumbnails": []
        }
      },
      "publisherName": {
        "type": "Text",
        "config": {
          "label": "Publisher Name",
          "placeholder": "Publisher Name"
        }
      },
      "tags": {
        "type": "Group",
        "config": {
          "label": "Tags",
          "fields": {
            "tag": {
              "type": "Link",
              "config": {
                "label": "Tag",
                "select": "document",
                "customtypes": [
                  "tag"
                ]
              }
            }
          }
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "seo_slice": {
              "type": "SharedSlice"
            }
          }
        }
      }
    }
  }
}